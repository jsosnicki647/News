
{{#each articles}}
<div class="card" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title">{{title}}</h5>
    <p class="card-text">{{teaser}}</p>
    <a href={{link}} target="_blank" class="btn btn-primary">Read Article</a>
    <btn class="btn btn-success note" data-id={{_id}} data-title="{{title}}">Add Note</btn>
    <btn class="btn btn-danger save" data-title="{{title}}" data-teaser="{{teaser}}" data-link={{link}}>Save</btn>
    
  </div>
</div>
{{/each}}

<div id="note-modal" class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 id="modal-article-title" class="modal-title"></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <textarea id="note-text" style="width: 100%"></textarea>
      </div>
      <div class="modal-footer">
        <button type="button" id="modal-close" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" data-id="" id="save-note" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>



    